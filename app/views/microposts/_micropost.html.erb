<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.digit_50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.display_image if micropost.image.attached? %>  
  </span>
  <span class="timestamp">
    <%= t "micropost.show.posted_ago", time: time_ago_in_words(micropost.created_at) %>
    <% if current_user? micropost.user %>
      <%= link_to t("micropost.delete.title"), micropost, data: { "turbo-method": :delete, turbo_confirm: t("micropost.delete.confirmation") } %>
    <% end %>
  </span>
</li>
