<% provide :title, t("sign_up.title") %>
<h1><%= t("sign_up.title") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name, t("activerecord.attributes.user.name") %>
      <%= f.text_field :name %>

      <%= f.label :email, t("activerecord.attributes.user.email") %>
      <%= f.email_field :email %>

      <%= f.label :password, t("activerecord.attributes.user.password") %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t("sign_up.confirmation") %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t("sign_up.create_my_account"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
